<%= form_with model: @task do |f| %>
  <div class="mb-3">
  <%= f.label :title, { class: "form-label"} %>
  <%= f.text_field :title, { class: "form-control", placeholder: "Title" } %>
  </div>
  <div class="mb-3">
  <%= f.label :details, { class: "form-label"} %>
  <%= f.text_field :details, { class: "form-control", placeholder: "Details" } %>
  </div>
  <div class="mb-3">
  <%= f.label :completed, "Completed", { class: "form-label"} %>
  <%= f.check_box :completed, { class: "form-check-inline" } %>
  </div>
  <%= f.submit :Submit, { class: "btn btn-primary mb-3" } %>
<% end %>
